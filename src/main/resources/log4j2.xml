<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d [%t] %-2level %logger{36} - %msg%n"/>
        </Console>
        <File name="File" fileName="errors.log">
            <PatternLayout pattern="%d [%t] %-4level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="racxa" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root>
            <AppenderRef ref="File" level="error"/>
        </Root>
    </Loggers>
</Configuration>